{
  "manifest_version": 3,
  "name": "Amazon Returns Tab",
  "version": "1.0",
  "description": "Adds a Returns tab to the Your Orders page on Amazon.",
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/gp/your-account/order-history*",
        "https://www.amazon.com/gp/css/order-history*",
        "https://www.amazon.com/your-orders/orders*",
        "https://www.amazon.com/your-orders*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}